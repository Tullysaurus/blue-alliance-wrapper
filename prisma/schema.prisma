generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider     = "postgresql"
  relationMode = "prisma"
}

model Award {
  id                    Int            @id @default(autoincrement())
  name                  String
  awardType             Int
  eventKey              String
  recipientList         AwardRecipient @relation(fields: [awardRecipientTeamKey], references: [teamKey])
  year                  Int
  
  awardRecipientTeamKey Int
}

model AwardRecipient {
  teamKey Int     @unique
  awardee String?
  awards  Award[]
}

model DistrictList {
  abbreviation String @unique
  displayName  String
  key          String @unique
  year         Int
}

model DistrictRanking {
  teamKey     String @unique
  rank        Int    @unique
  rookieBonus Int?
  pointTotal  Int
  // eventPoints     DistrictRankingEvenPoints
}
