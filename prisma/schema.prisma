generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider     = "postgresql"
  relationMode = "prisma"
}

model Event {
  key       String @unique
  name      String
  eventCode String
  eventType Int

  district  DistrictList
  city      String?
  stateProv String?
  country   String?

  startDate DateTime
  endDate   DateTime
  year      Int

  shortName       String?
  eventTypeString String
  week            Int?

  // ===== Profile Information ===== \\
  address    String?
  postalCode String?

  gmapsPlaceId String?
  gmapsUrl     String?
  lat          Int?
  lng          Int?

  locationName String?
  timezone     String?
  website      String?

  firstEventId   String?
  firstEventCode String?

  // webcasts Webcast[]
  divisionKeys String[]

  parentEventKey    String?
  playoffType       Int?
  playoffTypeString String
}

model DistrictList {
  key          String @unique
  abbreviation String
  displayName  String
  year         Int

  eventKey     String
  events       Event[] 
}